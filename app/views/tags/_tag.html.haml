.col-sm-4.col-md-3.tag-content
  .thumbnail_tag-content
    -#= link_to image_tag(prototype.set_main_thumbnail), prototype_path(prototype)
    .tag-caption
      %a.tag-link{href: tag_path(tag.id)}
        %h3
          = tag.content
      .tag-meta
        .tag-list
          - project_count = tag.prototype_tags.count
          - if project_count <= 1
            %a.project-link{href: tag_path(tag.id)}
              = "#{project_count} project"
          - else
            %a.project-link{href: tag_path(tag.id)}
              = "#{project_count} projects"
          -#= link_to tag.prototype, prototype_path(tag.prototype_id)
