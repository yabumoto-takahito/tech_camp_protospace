.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to image_tag(prototype.set_main_thumbnail), prototype_path(prototype)
    .caption
      %h3
        = prototype.title
      %ul.proto-meta
        -if user_signed_in? && current_user.id == prototype.user_id
          %li.proto-user
            = link_to "編集", edit_prototype_path(prototype)
      .proto-meta
        .proto-user
          = link_to prototype.user.name, user_path(prototype.user)
        .proto-posted
          = prototype.posted_date
      %ul.proto-tag-list.list-inline
        - prototype.tags.each do |tag|
          %li
            = link_to "#{tag.content}", tag_path(tag), {class: "btn btn-default"}
